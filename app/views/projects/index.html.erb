<div class="index">
  <div class="card bg-dark rounded-square">
    <div class="card-body">
      <h2 class="card-title d-flex justify-content-between mb-4">
        <span>Projects</span>
        <%= link_to 'New Project', new_project_path, class: 'btn btn-info rounded-square' %>
      </h2>    


      <% @projects.each do |project| %>
        <%= link_to project, class: 'text-decoration-none' do %>
          <div class="card bg-dark project-card mb-3">
            <div class="card-body">
              <div class="mb-3">
                <span class="badge bg-<%= project.badge_color %>">
                <%= project.status %>
                </span>
                <span class="text-secondary">
                  <small>
                    <%= project.percent_complete %>% complete
                    (<%= project.total_complete %>/<%= project.total_tasks %> tasks)
                  </small> 
                </span>    
              </div>
              <h4 class="card-title"><%= project.name %></h4>
              <p class="text-secondary"><%= project.description %></p>
            </div>
          </div>
        <% end %> 
      <% end %>
    </div>
  </div>
</div>
